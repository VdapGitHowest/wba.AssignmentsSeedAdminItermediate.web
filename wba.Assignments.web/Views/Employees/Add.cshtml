@model EmployeeAddViewModel

<h1>Add new employee to the company</h1>
<h2>Fill in the form</h2>
<form asp-action="Add" asp-controller="Employees" method="post">
    <div class="form-group">
        <label asp-for=Name>Add new Employee Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for=Department>Add new Employee Department</label>
        <input asp-for="Department" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for=Position>Add new Employee Position</label>
        <input asp-for="Position" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
</form>